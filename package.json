{
  "name": "hyper-markdown",
  "displayName": "hyper-markdown",
  "description": "hypermd as markdown editor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "markdown",
        "extensions": [
          ".md"
        ],
        "aliases": [
          "md",
          "markdown"
        ]
      }
    ],
    "customEditors": [
      {
        "viewType": "hyper-markdown.editor",
        "displayName": "hyper-markdown",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "hediet.vscode-drawio.convert",
        "title": "Convert To...",
        "category": "Draw.io"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build_hypermd": "webpack --config webpack.config.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "eslint": "^9.9.1",
    "hypermd": "^0.3.11",
    "style-loader": "^4.0.0",
    "typescript": "^5.5.4",
    "webpack-cli": "^5.1.4"
  }
}
